<!-- ======= Testimonials Section ======= -->
<section id="courses" class="testimonials">
    <div class="container">

        <div class="section-title" data-aos="zoom-out">
            <h2>Courses</h2>
        </div>
        <div class="testimonials-slider swiper" data-aos="fade-up" data-aos-delay="100">
            <div class="swiper-wrapper">
                <% courses.forEach(course => { %>
                    <div class="swiper-slide">
                        <div class="testimonial-item">
                            <img src="assets/img/testimonials/<%= course.profilepicture %>" class="testimonial-img" alt="">
                            <h3><%= course.lecturer %></h3>
                            <h4 style="font-family: sans-serif; font-size: 30px; color: black;"><%= course.course_code %></h4>  
                            <h3><%= course.name %></h3>
                        </div>
                    </div>
                <% }) %>
            </div>
            <div class="swiper-pagination"></div>
        </div>

    </div>
</section><!-- End Testimonials Section -->

