    <!-- ======= Main Section ======= -->
        <main id="main" style="height: 70vh;">
            <section id="contact" class="contact">
                <div class="container" data-aos="fade-up">
                    <div class="section-title">
                        <h2>Login</h2>
                        <p>Enter your details to Sign In</p>
                    </div>
                    <form action="/login" method="post" role="form" class="php-email-form">
                        <div class="text-center col-12">
                            <a href="/signup">Don't have an account? Signup</a><br>
                        </div>
                        <% if(error){ %>
                            <div class="alert alert-danger" role="alert">
                                <%= message %>
                            </div>
                        <% } %>
                        <div class="row gy-2 gx-md-3">
                            <div class="col-md-6 form-group">
                                <label for="email">Your Email</label>
                                <input type="email" required class="form-control" name="email" value="<%= user.email %>" id="email" />
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="password">Password</label>
                                <div class="input-group">
                                    <input type="password" required class="form-control" name="password" value="<%= user.passsword %>" id="password" />
                                    <button type="button" class="btn btn-outline-secondary" id="showPasswordToggle">
                                        <i class="bi bi-eye" id="eyeIcon"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="text-center col-12">
                                <button type="submit">Login</button>
                            </div>
                        </div>
                    </form>
                    <script>
                        document.getElementById('showPasswordToggle').addEventListener('click', function () {
                            var passwordInput = document.getElementById('password')
                            var eyeIcon = document.getElementById('eyeIcon')
                            if (passwordInput.type === 'password') {
                                passwordInput.type = 'text'
                                eyeIcon.classList.remove('bi-eye')
                                eyeIcon.classList.add('bi-eye-slash')
                            } else {
                                passwordInput.type = 'password'
                                eyeIcon.classList.remove('bi-eye-slash')
                                eyeIcon.classList.add('bi-eye')
                            }
                        })
                    </script>
                </div>
            </section>            
        </main>
    <!-- End #main -->
<%- include('partials/footer') %>
